<%= simple_form_for(@admin_fountain) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  </div>

    <%= f.input :issue, label:'期數' %>
    <%= f.input :title, label:'標題' %>
    <% if @admin_fountain.catalogue.present? %>
      <%= f.input :catalogue, label: '目錄', as: :ckeditor, input_html: {rows: 40} %>
    <% else %>
      <%= link_to '編輯目錄(本期所有文章都輸入完後作)', new_catalogue_admin_fountain_path(@admin_fountain), :method => :post %>
    <% end %>
  <div class="form-actions">
    <%= f.button :submit, '更新', class:'btn btn-primary btn-lg' %>
  </div>
<% end %>
