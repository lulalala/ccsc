<div class="row">
  <div class="col-md-8">
    <%= simple_form_for(@admin_fountain) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :issue, label:'期數' %>
        <%= f.input :title, label:'標題' %>
      </div>


      <%= f.label :image, '封面' %>
      <%= f.file_field :image %><br/>

      <div class="form-actions">
        <%= f.button :submit, '更新', class:'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if @admin_fountain.persisted? && @admin_fountain.image.present? %>
      <%= image_tag @admin_fountain.image.url, style:'width: 100%' %>
    <% end %>
  </div>
</div>
