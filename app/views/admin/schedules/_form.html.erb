<% if params[:schedule_id]
  url = admin_schedule_path(@schedule)
else
  url = admin_schedules_path
  end %>
<%= simple_form_for @schedule, url: url do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :body, label:'內文', as: :ckeditor, input_html: {rows: 40} %>
    <%= f.label '團體' %>
    <p><%= f.collection_select :group_id, Group.all, :id, :name %> </p>
  </div>

  <div class="form-actions">
   <p> <%= f.button :submit, '存檔', class:'btn btn-lg btn-default' %></p>
  </div>
<% end %>
