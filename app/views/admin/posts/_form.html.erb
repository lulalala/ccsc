<%= simple_form_for(@admin_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label:'標題' %>
    <%= f.input :author, label:'作者' %>
    <%= f.input :tag_list, label: '關鍵字' %>
    <%= f.input :body, label:'內文', as: :ckeditor, input_html: {rows: 40} %>

    <% if params[:fountain_id] %>
      <%= f.input :fountain_id, label:'期數', input_html: {value: params[:fountain_id]} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '存檔', class:'btn btn-lg btn-default' %>
  </div>
<% end %>
