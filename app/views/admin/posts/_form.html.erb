<%= simple_form_for(@admin_post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :body, as: :ckeditor, input_html: {rows: 40} %>

    <% if params[:fountain_id] %>
      <%= f.input :fountain_id, input_html: {value: params[:fountain_id]} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
