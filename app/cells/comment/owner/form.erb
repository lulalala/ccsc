<% if current_page?(admin_forum_board_topic_path) %>
  <% url = admin_comment_posts_path %>
<% else %>
  <% url = comment_posts_path %>
<% end %>
<%= form_tag(url) do %>
  <%= hidden_field_tag :owner_id, @owner.id %>
  <%= hidden_field_tag :owner_type, @owner.class %>

  <div class="field">
    <%= label_tag :author, '名字' %>
    <%= text_field_tag :author %>
  </div>

  <%= text_area_tag :content, nil, autocomplete:'off' %>
  <% unless current_page?(admin_forum_board_topic_path) %>
    <%= recaptcha_tags(hl: 'zh-TW') %>
  <% end %>
  <div class="actions">
    <%= submit_tag '留言',
      class: 'btn btn-large',
      data:{disable_with:'留言中...'} %>
  </div>
<% end %>
