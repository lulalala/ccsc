<article class="post">
  <header class="info">
    <span class="author">名字：<%= @post.author || '匿名' %></span>
    <%= time_tag(@post.created_at) %>
    <% if current_user && current_user.admin? %>
      <%= link_to '編輯', edit_admin_comment_post_path(id: @post.id), class:'btn btn-default', data:{:'no-turbolink' => true} %>
    <% end %>
  </header>
  <div class="content break-word">
    <%= @post.content_html.html_safe %>
  </div>
</article>
